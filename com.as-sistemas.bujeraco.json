{
  "app-id": "com.as-sistemas.bujeraco",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "bujeraco",
  "finish-args": [
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "bujeraco",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 bujeraco.bin /app/bin/bujeraco",
        "install -Dm644 com.as-sistemas.bujeraco.desktop /app/share/applications/com.as-sistemas.bujeraco.desktop",
        "install -Dm644 com.as-sistemas.bujeraco.png /app/share/icons/hicolor/256x256/apps/com.as-sistemas.bujeraco.png"
      ],
      "sources": [
        {
          "type": "file",
          "path": "bujeraco.bin"
        },
        {
          "type": "file",
          "path": "com.as-sistemas.bujeraco.desktop"
        },
        {
          "type": "file",
          "path": "com.as-sistemas.bujeraco.png"
        }
      ]
    }
  ]
}
